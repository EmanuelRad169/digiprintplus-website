{
  "extends": "../config/typescript/react.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./",
    "ignoreDeprecations": "6.0",
    "paths": {
      "@workspace/utils": [
        "../utils/src"
      ],
      "@workspace/utils/*": [
        "../utils/*"
      ],
      "@workspace/types": [
        "../types/src"
      ],
      "@workspace/types/*": [
        "../types/src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    {
      "path": "../utils"
    },
    {
      "path": "../types"
    }
  ]
}