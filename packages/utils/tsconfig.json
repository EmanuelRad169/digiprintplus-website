{
  "extends": "../config/typescript/base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": ".",
    "ignoreDeprecations": "5.0",
    "paths": {
      "@workspace/types": [
        "../types/src"
      ],
      "@workspace/types/*": [
        "../types/src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "sanity/**/*",
    "sanity.ts",
    "sanity.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}