{
  "extends": "../config/typescript/react.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "ignoreDeprecations": "6.0",
    "paths": {
      "@workspace/ui": [
        "../ui/src"
      ],
      "@workspace/utils": [
        "../utils/src"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    {
      "path": "../ui"
    },
    {
      "path": "../utils"
    }
  ]
}